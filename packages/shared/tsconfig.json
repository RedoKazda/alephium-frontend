{
  "extends": "tsconfig/base",
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "test"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6"
  }
}
