{
  "extends": "@alephium/typescript-config/base",
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "dist",
    "module": "ESNext",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
