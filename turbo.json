{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "pipeline": {
    "lint": {},
    "lint:fix": { "cache": false },
    "clean": { "cache": false },
    "clean:node-modules": { "cache": false },
    "test": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": ["topo", "^build"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
