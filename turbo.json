{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "lint": {},
    "lint:fix": {},
    "ts:check": {},
    "test": {},
    "clean": {},
    "compile": {
      "dependsOn": ["clean"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["ts:check", "compile", "^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
