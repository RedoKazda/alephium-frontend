{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "pipeline": {
    "compile": {
      "dependsOn": ["ts:check", "lint", "test"],
      "outputs": ["dist/**"]
    },
    "ts:check": {
      "dependsOn": ["topo"]
    },
    "lint": {
      "dependsOn": ["topo"]
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "dependsOn": ["topo"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
